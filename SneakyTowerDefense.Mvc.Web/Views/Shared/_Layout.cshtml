<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Sneaky Tower Defense</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Sneaky Tower Defense", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    @*<section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>*@
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Game", "Index", "Game")</li>
                            @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <a href="https://github.com/SneakyBrian/SneakyTowerDefense">
                <img style="position: absolute; top: 0; left: 0; border: 0;" 
                        src="https://s3.amazonaws.com/github/ribbons/forkme_left_gray_6d6d6d.png" 
                        alt="Fork me on GitHub" />
            </a>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Sneaky Tower Defense</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        <script src="http://code.createjs.com/easeljs-0.5.0.min.js" type="text/javascript"></script>
        <script src="http://code.createjs.com/tweenjs-0.3.0.min.js" type="text/javascript"></script>
        <script src="http://code.createjs.com/soundjs-0.3.0.min.js" type="text/javascript"></script>
        <script src="http://code.createjs.com/preloadjs-0.2.0.min.js" type="text/javascript"></script>
        @Scripts.Render("~/bundles/game")
        @RenderSection("scripts", required: false)
    </body>
</html>
